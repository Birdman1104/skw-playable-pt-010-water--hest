
  <script>
    window.onload = () => {
      window.createGame();
    };
    window.gameReadyCall = () => {};
    window.installCTA = () => {
      const store = navigator.userAgent.toLowerCase().indexOf("android") > -1 ? "google" : "apple";
      switch (store) {
        case "google":
          mraid.open("https://play.google.com/store/apps/details?id=com.hitapps.figgerits");
          break;
        case "apple":
          mraid.open("https://apps.apple.com/us/app/figgerits-word-puzzle-games/id1600880375");
          break;
      }
    };
  </script>